<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Guide.suchelin.StoreDetail.StoreDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="Guide.suchelin.StoreDetail.StoreDetailActivity">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imgStore"
            android:layout_height="wrap_content">
            <ImageView

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="100dp"
                android:id="@+id/imgStoreInside"
                android:layout_height="100dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imgStore"
            android:id="@+id/superNameTextView"
            android:fontFamily="@font/leferipointspecial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Detail Page"
            android:layout_marginTop="12dp"
            android:textSize="20sp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/superNameTextView"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/oneStarLayout"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="20dp"
                android:src="@drawable/iconstar258945"
                android:id="@+id/onestar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/superNameTextView"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/twoStarLayout"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/star22"
                android:layout_height="20dp"
                android:src="@drawable/iconstar258945"
                android:layout_marginEnd="8dp"
                android:id="@+id/star21"/>
            <ImageView
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/star21"
                android:layout_height="20dp"
                android:src="@drawable/iconstar258945"
                android:id="@+id/star22"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/superNameTextView"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/threeStarLayout"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/star32"
                android:layout_height="20dp"
                android:src="@drawable/iconstar258945"
                android:layout_marginEnd="8dp"
                android:id="@+id/star31"/>
            <ImageView
                android:layout_width="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/star33"
                app:layout_constraintStart_toEndOf="@+id/star31"
                android:layout_height="20dp"
                android:src="@drawable/iconstar258945"
                android:layout_marginEnd="8dp"
                android:id="@+id/star32"/>
            <ImageView
                app:layout_constraintStart_toEndOf="@+id/star32"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="20dp"
                android:src="@drawable/iconstar258945"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="20dp"
                android:id="@+id/star33"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/threeStarLayout"
        android:lines="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
