<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/map_store_parent"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="7dp"
        android:background="@drawable/box_10_ractangle_white"
        android:elevation="3dp"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_centerVertical="true"
            android:id="@+id/map_store_cardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/map_store_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/thumbsup3916586" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/map_store_cardView"
            android:layout_alignBottom="@+id/map_store_cardView"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/map_store_michelin_imageView"
            android:layout_toEndOf="@+id/map_store_cardView"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/map_store_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="start"
                android:fontFamily="@font/leferipointspecial"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="와우당" />

            <TextView
                android:id="@+id/map_store_detail_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/leferipointwhite"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="와우당" />

        </LinearLayout>

        <ImageView
            android:id="@+id/map_store_michelin_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_michelin_one"
            android:contentDescription="suchelinStar" />

        <ImageView
            android:id="@+id/map_store_rank_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/map_store_cardView"
            android:src="@drawable/ic_three_rank"
            android:contentDescription="rank" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/map_suwon_parent"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="7dp"
        android:background="@drawable/box_10_ractangle_white"
        android:elevation="3dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="@string/suwon"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_suchelin"
            android:contentDescription="suchelinIcon"/>

    </LinearLayout>

</LinearLayout>